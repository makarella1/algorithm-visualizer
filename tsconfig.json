{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@utils": ["./utils"],
      "@pages": ["./pages"],
      "@components": ["./components"],
      "@ui": ["./components/ui"],
      "@hooks": ["./hooks"],
      "@features/hooks": ["./features/hooks"],
      "@features/selectors": ["./features/selectors"],
      "@features/slices/sortSettingsSlice": [
        "./features/slices/sortSettingsSlice"
      ],
      "@features/slices/arrayItemsSlice": ["./features/slices/arrayItemsSlice"],
      "@features/slices/sortAnimationsSlice": [
        "./features/slices/sortAnimationsSlice"
      ],
      "@store": ["./store/store"],
      "@utlis/sorting/animations/insertionSort": [
        "./utils/sorting/animations/insertionSort"
      ],
      "@features/thunks": ["./features/thunks"],
      "@utils/sorting/animations": ["./utils/sorting/animations"]
    }
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "tailwind.config.cjs",
    "vite.config.ts",
    "postcss.config.cjs"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
