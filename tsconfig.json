{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@utils": ["./utils"],
      "@pages": ["./pages"],
      "@components": ["./components"],
      "@ui": ["./components/ui"],
      "@context": ["./context"],
      "@hooks": ["./hooks"],
      "@features/hooks": ["./features/hooks"],
      "@features/selectors": ["./features/selectors"],
      "@features/slices/sortSettingsSlice": [
        "./features/slices/sortSettingsSlice"
      ],
      "@features/slices/insertionSortSlice": [
        "./features/slices/insertionSortSlice"
      ],
      "@features/slices/arrayItemsSlice": ["./features/slices/arrayItemsSlice"],
      "@store": ["./store/store"]
    }
  },
  "include": ["src", ".eslintrc.cjs", "tailwind.config.cjs", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
